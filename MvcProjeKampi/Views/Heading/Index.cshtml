@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    #
                </th>
                <th style="width: 20%">
                    Başlık Adı
                </th>
                <th style="width: 20%" class="text-ri">
                    Kategori
                </th>
                <th style="width: 20%">
                </th>
            </tr>
        </thead>
    </table>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Kategori</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HeadingID</td>
                <td>@item.HeadingName</td>
                <td>@item.Category.CategoryName</td>
                <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm" href="/Heading/ContentByHeading/@item.HeadingID">
                        <i class="fas fa-folder">
                        </i>
                        İçerik
                    </a>
                    <a class="btn btn-info btn-sm" href="#">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Düzenle
                    </a>
                    <a class="btn btn-danger btn-sm" href="#">
                        <i class="fas fa-trash">
                        </i>
                        Sil
                    </a>
                </td>
            </tr>
        }
    </table>
    <br />
    <a href="/Heading/AddHeading/" class="btn btn-info">Yeni Başlık Giriş</a>
</div>
